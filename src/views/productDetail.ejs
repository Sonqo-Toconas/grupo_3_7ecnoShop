<%- include('./partials/head') %>

    <link rel="stylesheet" href="/css/productDetail.css">
    </head>

    <body>

        <%- include('./partials/header') %>

            <main>
                <div class="grande">
                    <article class="cajagrande1">
                        <div class="caja">
                            <h1><%= producto.nombre %></h1>
                            <h3>Precio: <br>$<%= producto.precio %></h3>
                            <div class="desplegable">
                                <select name="forma" id="forma">
                                    <option disabled selected="formas de pago">Formas de Pago</option>
                                    <option value="tarjeta de credito">Tarjeta de credito</option>
                                    <option value="tarjeta de debi4to">Tarjeta de debito</option>
                                    <option value="efectivo">Efectivo</option>
                                    <option value="billetera virtual">Billetera virtual</option>
                                </select>
                            </div>

                        </div>
                        <img class="img0" src="/images/celulares/<%= producto.imagen%>"
                            alt="Celular Samsung Cobre">
                    </article>

                    <!--Perspectivas y datos-->
                    <article class="cajagrande2">
                        <div class="caja2-main">
                            <h2>Mas perspectivas:</h2>
                            <div class="img1">
                                <img class="mas" src="/images/celulares/<%= producto.imagen2%>"
                                    alt="Celular Samsung Cobre perfil">
                                <img class="mas" src="/images/celulares/<%= producto.imagen3%>"
                                    alt="Celular Samsung Cobre espalda">
                            </div>

                        </div>
                        <section>
                            <div class="color">
                                <h2>Seleccion de colores</h2>
                                <div class="form-group">
                                    <input type="radio" name="color" id="azul">
                                    <label for="azul">Negro</label>
                                </div>
                                <div class="form-group">
                                    <input type="radio" name="color" id="blanco">
                                    <label for="blanco">Blanco</label>
                                </div>
                                <div class="form-group">
                                    <input type="radio" name="color" id="cobre" checked>
                                    <label for="cobre">Cobre</label>
                                </div>
                                <div class="form-group">
                                    <input type="radio" name="color" id="verde">
                                    <label for="verde">Verde</label>
                                </div>
                            </div>
                            <div class="botones">
                                <button class="comprar">
                                    <h3>Comprar</h3>
                                </button>
                                <button class="añadir">
                                    <h3>Añadir al carrito</h3>
                                    <i class="fa-solid fa-cart-plus"></i>
                                </button>
                            </div>
                        </section>
                    </article>
                </div>

                <!--Informacion-->
                <div class="informacion-main">
                    <h2>Informacion del producto</h2>
                    <p><%= producto.descripcion%></p>
                </div>
                <!--Productos destacados-->

                <section class="productosDestacados">
                    <h2>Productos destacados</h2>
                    <div class="caja3-main">
                        <div class="flecha">
                            <i class="fa-solid fa-chevron-left"></i>
                        </div>

                        <div class="card-list-products">
                            <div class="card">
                                <img class="img2" src="images/celulares/samsung/samsung-a14-frente-negro.png"
                                    alt=" samsung galaxy A14">
                                <div class="cardPrice">
                                    <h3>Samsung Galaxy A14</h3>
                                    <p class="p">Precio: $94.999</p>
                                </div>
                            </div>
                            <div class="card">
                                <img class="img2" src="images/celulares/xiaomi/Xiaomi-redmi-note-11-frente-negro.png"
                                    alt=" xiaomi redmi note 11">
                                <div class="cardPrice">
                                    <h3>Xiaomi Redmi Note 11</h3>
                                    <p class="p">Precio: $85999</p>
                                </div>
                            </div>
                            <div class="card">
                                <img class="img2" src="images/celulares/motorola/Motorola-moto-g72-frente-blanco.png"
                                    alt=" motorola moto g72">
                                <div class="cardPrice">
                                    <h3>Motorola Moto G72</h3>
                                    <p class="p">Precio: $125.999</p>
                                </div>
                            </div>
                        </div>
                        <div class="flecha">
                            <i class="fa-solid fa-chevron-right"></i>
                        </div>
                    </div>

                </section>

            </main>

            <%- include('./partials/footer') %>

    </body>

    </html>