
<%- include('./partials/head') %>

    <link rel="stylesheet" href="/css/productDetail.css">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximun-scale=1.0">
    </head>
    

       <body>
        <%- include('./partials/header') %>
            <main class="main">
                <div class="contenedor">  
                <div class="contenedor-orden">
                <section class="izquierdo">
                            <h1 class="titulo">
                                <%= producto.name %>
                            </h1>
                            <h3 class="precio">Precio: <br>$<%= producto.price%></h3>
                            <div class="desplegable">
                            <form action="/producto/compra/<%= producto.id_product %>" method="POST">
                                <select name="formaDePago" id="formaDePago">
                                    <option disabled selected="formas de pago">Formas de Pago</option>
                                    <option value="1">Tarjeta de credito</option>
                                    <option value="2">Tarjeta de debito</option>
                                    <option value="3">Efectivo</option>
                                    <option value="4">Billetera virtual</option>
                                </select>
                            </div>   
                            <button class="comprar" type="submit">
                                <h4>Comprar</h4>
                            </button>
                            </form>
                           
                            <div class="botones">
                              <form action="/usuario/carrito/add/<%=producto.id_product%>" method="post">
                                <div class="cantidad"><label>Cantidad:</label><br>
                                    <input type="number" min="1" name="amount" value="1"></input></div>
                                <button class="añadir">
                                    <h4>Añadir al carrito</h4>
                                    <i class="fa-solid fa-cart-plus"></i>
                                </button>
                            

                              </form>  
                                
                            </div>
                </section>
            <div class="contenedor-derecho">
                <section >
                        <img class="img0" src="/images/celulares/<%= producto.image%>"  alt="Celular Samsung Cobre">
                </section>
            </div>   
            </div>
                    <!--Perspectivas y datos-->
                   
        <% if (admin) { %>
       
                <div class="carteluser">
                    <p class="informacionCartel">Administrar</p>
                    <div class="conteiner-editar">
                        <a href="/producto/editar/<%= producto.id_product %>" class="botonuser">Editar Producto</a>
                    </div> 
                     <form  action="/producto/delete/<%= producto.id_product %>"   method="POST">
                            <button type="submit" class="eliminar" >Eliminar</button>
                        </form> 
                      
                </div>
           <% } %>
                <!--Informacion-->
                <div class="conteiner1">
                <div class="informacion-main">
                    <h2>Informacion del producto</h2><br>
                    <p>
                        <%= producto.description%>
                    </p>
                </div>
                <!--Productos destacados-->
                <section class="productosDestacados">
                    <h2>Productos destacados</h2>
                    <div class="slider-box">
                        <ul>
                            <% otrosProductos.forEach (producto => { %>
                               <li>
                                <a href="/producto/detalle/<%=producto.id_product %>">
                                <img src="/images/celulares/<%= producto.image%>" alt="<%=producto.name %>"></a>
                                <div class="text">
                                    <h3><%=producto.name%></h3>
                                </div>
                            </li> 
                            <% }); %>
                             
            
                          
                        </ul>
                    </div>   
                </section>
              </div>
            </div>
            </main>
            <%- include('./partials/footer') %>
       </body>
    
    </html>